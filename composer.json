{
    "name": "webfactory/icu-translation-bundle",
    "description": "Enables ICU message formatting for translations in Symfony applications.",
    "keywords": ["symfony", "translator", "translation", "pluralization", "icu", "formatting", "message"],
    "license": "MIT",
    "authors": [
        {
            "name": "webfactory GmbH",
            "email": "info@webfactory.de",
            "homepage": "http://www.webfactory.de",
            "role": "Developer"
        }
    ],

    "require": {
        "php": "^7.0|^7.1",
        "ext-intl": "*",
        "lib-ICU": ">=4.8",
        "symfony/framework-bundle": "~2.2|~3.0|~4.0",
        "psr/log": "^1.0.0",
        "jms/parser-lib": "^1.0.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "~2.2.0",
        "squizlabs/php_codesniffer": "1.*",
        "phpmd/phpmd": "1.*",
        "sebastian/phpcpd": "~2.0",
        "mayflower/php-codebrowser": "~1.1",
        "phploc/phploc": "~2.0.0",
        "pdepend/pdepend": "~1.1.0",
        "satooshi/php-coveralls": "^1.0.0",
        "matthiasnoback/symfony-service-definition-validator": "~1.0"
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix"
    },
    "autoload": {
        "psr-4": { "Webfactory\\IcuTranslationBundle\\": "" }
    }

}
